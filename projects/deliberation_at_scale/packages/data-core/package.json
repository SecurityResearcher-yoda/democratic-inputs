{
  "name": "@deliberation-at-scale/data-core",
  "version": "0.0.1",
  "description": "Core package handling all the data storage and management for the Deliberation at Scale project.",
  "main": "dist/index.js",
  "scripts": {
    "setup": "npm install",
    "setup:env": "cp .env.example .env",
    "start": "ts-node ./src/index.ts",
    "start:supabase": "supabase start",
    "db:migrate": "ts-node ./src/commands/migrate.ts",
    "db:generate-migrations": "drizzle-kit generate:pg",
    "db:generate-types": "dotenv -e .env -- sh -c 'supabase gen types typescript --project-id \"$SUPABASE_PROJECT_ID\" --schema public > ./src/database/types.ts'",
    "db:login": "supabase login",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [],
  "author": "Pepijn Verburg <pepijn@bmd.studio>",
  "license": "MIT",
  "devDependencies": {
    "@graphql-tools/executor-http": "1.0.2",
    "@graphql-tools/schema": "10.0.0",
    "@graphql-tools/stitch": "9.0.1",
    "@graphql-tools/wrap": "10.0.0",
    "@types/express": "4.17.17",
    "@types/node": "20.4.6",
    "commander": "11.0.0",
    "debug": "4.3.4",
    "dotenv": "16.3.1",
    "dotenv-cli": "7.2.1",
    "drizzle-kit": "0.19.12",
    "drizzle-orm": "0.27.2",
    "express": "4.18.2",
    "graphql": "16.7.1",
    "graphql-voyager": "1.3.0",
    "graphql-yoga": "4.0.3",
    "postgres": "3.3.5",
    "supabase": "1.82.6",
    "ts-node": "10.9.1",
    "typescript": "5.1.6"
  }
}
